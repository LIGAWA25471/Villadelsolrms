// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ========== MULTI-TENANT MODELS ==========

model Branch {
  id        String   @id @default(cuid())
  name      String
  address   String
  phone     String?
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users           User[]
  menuCategories  MenuCategory[]
  menuItems       MenuItem[]
  orders          Order[]
  paymentMethods  PaymentMethod[]
  inventory       Inventory[]
  staffShifts     StaffShift[]
  kitchenQueues   KitchenQueue[]

  @@map("branches")
}

// ========== AUTHENTICATION & USERS ==========

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  firstName       String
  lastName        String
  phone          String?
  passwordHash   String
  role           UserRole @default(WAITER)
  isActive       Boolean  @default(true)
  branchId       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  branch         Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  orders         Order[]
  payments       Payment[]
  staffShifts    StaffShift[]

  @@index([branchId])
  @@index([email])
  @@map("users")
}

enum UserRole {
  ADMIN
  MANAGER
  WAITER
  CHEF
  CASHIER
}

// ========== MENU MANAGEMENT ==========

model MenuCategory {
  id        String   @id @default(cuid())
  name      String
  description String?
  branchId  String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  branch    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  items     MenuItem[]

  @@unique([branchId, name])
  @@index([branchId])
  @@map("menu_categories")
}

model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Numeric(10, 2)
  categoryId  String
  branchId    String
  image       String?
  isActive    Boolean  @default(true)
  preparationTime Int  @default(15) // in minutes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  category    MenuCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  branch      Branch       @relation(fields: [branchId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]

  @@index([categoryId])
  @@index([branchId])
  @@map("menu_items")
}

// ========== ORDERS & ORDER ITEMS ==========

model Order {
  id              String    @id @default(cuid())
  orderNumber     String
  tableNumber     Int?
  customerName    String?
  status          OrderStatus @default(PENDING)
  totalAmount     Decimal   @db.Numeric(10, 2) @default(0)
  subtotal        Decimal   @db.Numeric(10, 2) @default(0)
  tax             Decimal   @db.Numeric(10, 2) @default(0)
  discount        Decimal   @db.Numeric(10, 2) @default(0)
  notes           String?
  staffId         String?
  branchId        String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  paidAt          DateTime?

  // Relations
  staff           User?     @relation(fields: [staffId], references: [id], onDelete: SetNull)
  branch          Branch    @relation(fields: [branchId], references: [id], onDelete: Cascade)
  items           OrderItem[]
  payments        Payment[]
  kitchenQueue    KitchenQueue?

  @@unique([branchId, orderNumber])
  @@index([branchId])
  @@index([staffId])
  @@index([status])
  @@map("orders")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  SERVED
  CANCELLED
  COMPLETED
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  menuItemId  String
  quantity    Int
  unitPrice   Decimal  @db.Numeric(10, 2)
  totalPrice  Decimal  @db.Numeric(10, 2)
  notes       String?
  specialRequests String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem    MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([menuItemId])
  @@map("order_items")
}

// ========== PAYMENTS ==========

model Payment {
  id              String   @id @default(cuid())
  orderId         String
  amount          Decimal  @db.Numeric(10, 2)
  paymentMethod   PaymentMethod? @relation(fields: [paymentMethodId], references: [id])
  paymentMethodId String?
  status          PaymentStatus @default(PENDING)
  transactionId   String?
  staffId         String?
  notes           String?
  branchId        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  staff           User?    @relation(fields: [staffId], references: [id], onDelete: SetNull)
  branch          Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([branchId])
  @@map("payments")
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

model PaymentMethod {
  id        String   @id @default(cuid())
  name      String   // "Cash", "Card", "Digital"
  isActive  Boolean  @default(true)
  branchId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  branch    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  payments  Payment[]

  @@unique([branchId, name])
  @@index([branchId])
  @@map("payment_methods")
}

// ========== KITCHEN QUEUE ==========

model KitchenQueue {
  id          String   @id @default(cuid())
  orderId     String   @unique
  status      KitchenStatus @default(NEW)
  station     String   // "Grill", "Fryer", "Prep", etc.
  priority    Int      @default(0) // 0 = normal, 1 = high
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([station])
  @@map("kitchen_queues")
}

enum KitchenStatus {
  NEW
  ACCEPTED
  PREPARING
  READY_FOR_PICKUP
  COMPLETED
  CANCELLED
}

// ========== INVENTORY ==========

model Inventory {
  id          String   @id @default(cuid())
  itemName    String
  quantity    Decimal  @db.Numeric(10, 2)
  unit        String   // "kg", "L", "pieces", etc.
  minThreshold Decimal @db.Numeric(10, 2)
  maxCapacity Decimal  @db.Numeric(10, 2)
  branchId    String
  lastRestockDate DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  branch      Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, itemName])
  @@index([branchId])
  @@map("inventory")
}

// ========== STAFF SHIFTS ==========

model StaffShift {
  id        String   @id @default(cuid())
  userId    String
  branchId  String
  startTime DateTime
  endTime   DateTime?
  breakStart DateTime?
  breakEnd  DateTime?
  totalHours Decimal  @db.Numeric(5, 2) @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  branch    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([branchId])
  @@map("staff_shifts")
}
